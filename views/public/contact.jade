extends ../layout

block body
  div(class='header row')
    div(class='row')
      div(class='small-4 medium-4 large-4 columns')
        a(href="/").logo
          p!= '<span class="red-font">UI</span> <span class="gray-font">To</span> <span class="red-font">UX</span>'

      div(class='small-8 medium-8 large-8 columns')
        .primary-menu
          ul
            - list = ["<a href='/consulting'>Consulting</a>", "<a href='/technology'>Technology</a>", "<a href='/creative'>Creative</a>", "<a href='/advertising'>Advertising</a>", "<a href='/insights'>Data Insights</a>"]
              each item in list
                li.primary-link!= item

      div(class='navigation row')
        div(class='small-12 medium-12 large-12 columns').
          <nav class="top-bar" data-topbar role="navigation" data-options="is_hover: false">
            <ul class="title-area">
              <li class="name">
                <h1><a href="#">Clickable Top Bar</a></h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
            </ul>

            <section class="top-bar-section">
              <ul class="right">
                <li class="divider hide-for-small"></li>
                <li class="has-dropdown"><a>Main Item 1</a>
                  <ul class="dropdown">
                    <li><label>Dropdown Level 1 Label</label></li>
                    <li class="has-dropdown"><a>Dropdown Level 1a</a>

                      <ul class="dropdown">
                        <li><a href="#">Dropdown Level 2a</a></li>
                        <li><a href="#">Dropdown Level 2b</a></li>
                        <li class="has-dropdown"><a>Dropdown Level 2c</a>

                          <ul class="dropdown">
                            <li><a href="#">Dropdown Level 3a</a></li>
                            <li><a href="#">Dropdown Level 3b</a></li>
                            <li><a href="#">Dropdown Level 3c</a></li>
                          </ul>
                        </li>
                        <li><a href="#">Dropdown Level 2d</a></li>
                        <li><a href="#">Dropdown Level 2e</a></li>
                        <li><a href="#">Dropdown Level 2f</a></li>
                      </ul>
                    </li>
                    <li><a href="#">Dropdown Level 1b</a></li>
                    <li><a href="#">Dropdown Level 1c</a></li>
                    <li class="divider"></li>
                    <li><label>Dropdown Level 1 Label</label></li>
                    <li><a href="#">Dropdown Level 1d</a></li>
                    <li><a href="#">Dropdown Level 1e</a></li>
                    <li><a href="#">Dropdown Level 1f</a></li>
                    <li class="divider"></li>
                    <li><a href="#">See all &rarr;</a></li>
                  </ul>
                </li>
              </ul>
            </section>
          </nav>

  div(class='content row')
    div(class='small-12 medium-12 large-12 column')
      h1.page-title
        | Lets connect
      .page-subtitle
        | Is your brand in need of being pushed to its fullets potential?
        br
        | Let us know how we can help you.

      .contact-information
        .left-sidebar
          ul
            li
              | info@uitoux.com
            li
              != '1.800.789.9736 <span class="red-font"> Phone</span>'
            li
              != '1.877.789.6321 <span class="red-font"> Fax</span>'
            li
              | 10701 Corporate Dr | Suite 209
              br
              | Stafford, TX

        .right-sidebar
          .name
            label Name
            input(
              type='text'
              name='name'
              value size='60'
              maxlength='128'
              class='name-form'
            )
          .phone
            label Phone
            input(
              type='text'
              name='phone'
              value size='60'
              maxlength='128'
              class='phone-form'
            )
          .email
            label E-mail
            input(
              type='email'
              name='email'
              value size='60'
              class='email-form'
            )
          .message
            label Message
            textarea(
              name='message'
              cols='60'
              rows='5'
              class='message-form'
            )
          .submit-action
            input(
              class='submit-button'
              type='submit'
              name='Submit'
              value='Submit'
            )

      .map
        div#map