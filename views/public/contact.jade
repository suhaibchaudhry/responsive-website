extends ../layout

block body
  .header
    a(href="/").logo
      p!= '<span class="red-font">UI</span> <span class="gray-font">To</span> <span class="red-font">UX</span>'
    .primary-menu
      ul
        - list = ["<a href='/consulting'>Consulting</a>", "<a href='/technology'>Technology</a>", "<a href='/creative'>Creative</a>", "<a href='/advertising'>Advertising</a>", "<a href='/insights'>Data Insights</a>"]
          each item in list
            li.primary-link!= item

  .content
    h1.page-title
      | Lets connect
    .page-subtitle
      | Is your brand in need of being pushed to its fullets potential?
      br
      | Let us know how we can help you.

    .contact-information
      .left-sidebar
        ul
          li
            | info@uitoux.com
          li
            != '1.800.789.9736 <span class="red-font"> Phone</span>'
          li
            != '1.877.789.6321 <span class="red-font"> Fax</span>'
          li
            | 10701 Corporate Dr | Suite 209
            br
            | Stafford, TX

      .right-sidebar
        .name
          label Name
          input(
            type='text'
            name='name'
            value size='60'
            maxlength='128'
            class='name-form'
          )
        .phone
          label Phone
          input(
            type='text'
            name='phone'
            value size='60'
            maxlength='128'
            class='phone-form'
          )
        .email
          label E-mail
          input(
            type='email'
            name='email'
            value size='60'
            class='email-form'
          )
        .message
          label Message
          textarea(
            name='message'
            cols='60'
            rows='5'
            class='message-form'
          )
        .submit-action
          input(
            class='submit-button'
            type='submit'
            name='Submit'
            value='Submit'
          )

    .map
      div#map

  .footer
    .copyright-info
      | UITOUX Inc. All rights reserved
    .secondary-menu
      ul
        - list = ["About", "Contact"]
          each item in list
            li.primary-link= item