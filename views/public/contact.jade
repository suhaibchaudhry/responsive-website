extends ../layout

block body
  .header
    .logo
      div.red-font
        | UI
      div.gray-font
        | To
      div.red-font
        | UX
    .primary-menu
      ul
        - list = ["Consulting", "Technology", "Creative", "Advertising", "Data Insights"]
          each item in list
            li.primary-link= item

  .content
    h1.page-title
      | Lets connect
    .page-subtitle
      | Is your brand in need of being pushed to its fullets potential?
      br
      | Let us know how we can help you.

    .contact-information
      .left-sidebar
        ul
          li
            | info@uitoux.com
          li
            != '1.800.789.9736 <span class="red-font"> Phone</span>'
          li
            != '1.877.789.6321 <span class="red-font"> Fax</span>'
          li
            | 10701 Corporate Dr | Suite 209
            br
            | Stafford, TX

      .right-sidebar
        .name-phone
          label Name
          input(
            type='text'
            name='name'
            value size='60'
            maxlength='128'
            class='name-form'
          )
          label Phone
          input(
            type='text'
            name='phone'
            value size='60'
            maxlength='128'
            class='phone-form'
          )
        .email
          label E-mail
          input(
            type='email'
            name='email'
            value size='60'
            class='email-form'
          )
        .message
          label Message
          textarea(
            name='message'
            cols='60'
            rows='5'
            class='message-form'
          )

    .map
      iframe(
        src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3468.0058177510277!2d-95.59620148489454!3d29.632574282034035!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8640e7ae3b6e6a4d%3A0xdda1f618fe21119f!2sTx+Print+Company!5e0!3m2!1sen!2sus!4v1459202056815'
        width='100%'
        height='450'
        frameborder='0'
        style='border:0'
        allowfullscreen
      )

  .footer
    .secondary-menu
      ul
        - list = ["About", "Contact"]
          each item in list
            li.primary-link= item